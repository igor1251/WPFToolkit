<Window x:Class="UserControlsTestArea.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserControlsTestArea"
        xmlns:controls="clr-namespace:WPFToolkit.NetCore.Controls;assembly=WPFToolkit.NetCore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <controls:ReportControl x:Name="Report" Grid.Row="1" Margin="5 5 5 5" ContentGetter="{Binding GetContent}" DataGridColumnsGetter="{Binding GetColumns}" />
    </Grid>
</Window>
