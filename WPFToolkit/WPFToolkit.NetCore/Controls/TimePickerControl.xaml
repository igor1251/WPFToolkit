<UserControl x:Class="WPFToolkit.NetCore.Controls.TimePickerControl"
             x:Name="TimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFToolkit.NetCore.Controls"
             mc:Ignorable="d"
             MinWidth="75" MaxWidth="75"
             MinHeight="15" MaxHeight="20">
    <TextBox Text="{Binding ElementName=TimePicker, Path=TimeString, Mode=TwoWay}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
             FontStretch="ExtraExpanded" FontWeight="Bold"/>
</UserControl>
