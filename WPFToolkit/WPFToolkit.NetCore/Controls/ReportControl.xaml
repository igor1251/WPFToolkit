<UserControl x:Class="WPFToolkit.NetCore.Controls.ReportControl"
             x:Name="Report"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFToolkit.NetCore.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--<local:BusyControl Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Grid.RowSpan="3" IsBusy="{Binding ElementName=Report, Path=IsBusy, Mode=TwoWay}" />-->

        <StackPanel x:Name="TopPane" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
            <Button x:Name="UpdateButton" Content="Обновить" Width="100" Margin="0 0 5 5" Click="UpdateButton_Click" />
        </StackPanel>

        <DataGrid x:Name="ContentGrid" Grid.Column="1" Grid.Row="1" ItemsSource="{Binding ElementName=Report, Path=ReportContent.DefaultView}" AutoGenerateColumns="False"
                  SelectedItem="{Binding ElementName=Report, Path=SelectedRow}" CanUserDeleteRows="False" IsReadOnly="{Binding ElementName=Report, Path=IsContentGridReadOnly}" />

        <StackPanel x:Name="LeftPane" Grid.Column="0" Grid.Row="1" />
        <StackPanel x:Name="RightPane" Grid.Column="2" Grid.Row="1" />
        <StackPanel x:Name="BottomPane" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" />

    </Grid>
</UserControl>
